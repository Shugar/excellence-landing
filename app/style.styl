@import 'nib'
@import 'settings'

global-reset()

body 
  min-width 1200px

purpleLink = #7d396e
purpleLinkHover = #cb596e
blackText = #111
gradientPurple = linear-gradient(left, #74366e, #cb596e)
gradientPurple-2 = linear-gradient(bottom, #74366e, #cb596e)
buttonBorder = 1px #cb596e solid
angelica = 'Anglecia Pro Text', sans-serif
angelicad = 'Anglecia Pro Display', sans-serif
angelicat = 'Anglecia Pro Title', sans-serif
bodoni = 'a_BodoniNova', sans-serif

a
  text-decoration none 
.href
  a
    color purpleLink
    text-decoration none
    &:hover
      color purpleLinkHover
      
.href-2
  a
    color purpleLink
    text-decoration none
    border-bottom 1px purpleLink dotted
    &:hover
      color purpleLinkHover
      border-bottom 1px purpleLinkHover dotted

.slick-dots 
  li 
    button
      &:before
        font-size 40px
        line-height 12px
        color purpleLink
    &.slick-active 
      button:before
        color purpleLinkHover

.container
  position relative
  margin 0 auto
  width 1200px
  clearfix()


.header
  font-family angelica
  
  .content
    margin-top 15px
    height 200px
    
    .left, .right, .center
      display inline-block
      
    .left
      margin-top 56px
      float left
      font-size 16px
      font-style italic
      nav
        ul
          li
            margin-top 33px
            &:first-child
              margin-top 0
      
    .center
      absolute left 50% top
      transform translateX(-50%)
      img
        height 160px
        
    .right
      float right
      margin-top 56px
      button
        font-style italic
        font-size 15px
        width 223px
        background #fff
        font-family angelica
        border buttonBorder
        round()
        padding 14px 30px 11px 30px
        color blackText
        &:hover
          background gradientPurple
          color white
          
      p
        font-family angelicad
        font-size 20px
        margin-top 20px
        text-align center
        
  h1 
    text-align center
    font-weight bold
    font-size 16px
    letter-spacing 3px
    margin-top 5px
    color blackText

.gallery
  .container
    .slick
      .item
        position relative
        color #111111
        .background
          background rgba(255,255,255,.5)
          opacity 0
          transition opacity 2s
          transition-delay 2s
          absolute top left
          width 100%
          height 100%
          z-index 500
          &.visible
            opacity 1
          
        &:nth-child(3)
          .text
            width 330px  
            absolute top 130px right 55px
            
        &:nth-child(4)
          .text
            width 410px
            absolute top 210px left 55px  
        img 
          width 100%  
          
        .text
          absolute top 200px right 55px
          z-index 555
          width 450px
          
        .item-text
          font-family angelicat
          font-size 24px
          line-height 53px
          text-align center
          
         
        
        .name, .sub-title
          font-family angelica
          font-size 20px
          text-align center
          margin-top 10px
          font-style italic  
          
        .sub-title
          font-size 16px
          margin-top 15px
    
.about-us
  .container
    .title 
      display block
      margin 0 auto
    .block-1, .block-3, .block-5
      margin-top 20px
      height 350px
      .left, .right 
        display inline-block
        font-family angelica
        font-size 20px
        color blackText
        vertical-align top
      .left
        width 35%
        margin-left 50px
      .right
        width 55%
        .number
          font-family bodoni
          color purpleLink
          font-size 60px
          margin-top 50px
          
        .text
          margin-top 25px 
          line-height 30px
          
    .block-2, .block-4
      margin-top 20px
      height 350px
      .left, .right 
        display inline-block
        font-family angelica
        font-size 20px
        color blackText
        width 45%
        vertical-align top
      .left
        .number
          font-family bodoni
          color purpleLink
          font-size 60px
          margin-left 50px
          margin-top 50px
          
        .text
          margin-top 25px
          margin-left 50px
          line-height 30px
      .right
        position relative
        img
          position absolute
          right 100px

.services
  .container
    .title-container
      display block
      margin 0 auto
    .services-content
      margin-top 70px
      .item
        width 19.7%
        display inline-block
        text-align center
        &:nth-child(1)
          img
            height 54px
        &:nth-child(2)
          img
            height 72px
        &:nth-child(3)
          img
            height 71px
        &:nth-child(4)
          img
            height 51px
        &:nth-child(5)
          img
            height 56px
        img
          display block
          margin 0 auto
          margin-bottom 40px
        .title
          color blackText
          font-family angelicad
          font-size 18px
          font-weight 600
          letter-spacing 1px
          &:hover
            color purpleLink
        .sub-title
          margin-top 20px
          color #777
          font-family angelica
          font-style italic
          font-size 16px
    .all
      margin-top 50px
      text-align center
      a
        border-bottom 1px purpleLink solid
        color purpleLink
        &:hover
          color purpleLinkHover
          border-bottom 1px purpleLinkHover solid
  

.feedback
  padding 2em
  .container
    .title-content
      display block
      margin 0 auto
    .content
      margin-top 35px
      .left, .right, .center
        display inline-block
        vertical-align top
        .item
          position relative
          margin-top 50px
         
          .text
            &::before
              content 'Â«'
              display block
              position absolute
              padding-top 5px
              left -20px
            p
              font 20px angelica 
              line-height 32px
          .info
            margin-top 25px
            .name 
              font 16px angelica
              font-weight 600
              color #111
              font-style italic
            .sub-title
              font 16px angelica
              font-weight 600
              color #777
              margin-top 10px
              font-style italic
      .center
        width 1%
        .line
          height 500px
          width 3px
          background gradientPurple-2
          
      .left
        width 42%
        margin-left 90px
        .item
           &:first-child 
            margin-top 0
        
      .right
        width 42%
        margin-left 50px
        
    .all
      margin-top 50px
      text-align center
      a
        border-bottom 1px purpleLink solid
        color purpleLink
        &:hover
          color purpleLinkHover
          border-bottom 1px purpleLinkHover solid
        


.footer
  background #f7f7f7
  font-size 16px
  height 270px
  .left
    display inline-block
    vertical-align top
    .left-one, .left-two
      margin-left 55px
      display inline-block
      font 1em angelica
      margin-top 40px
      color #111111
      font-weight 600
      &:first-child
        margin-left 0
      p
        line-height 35px
      a
        color #111
        line-height 35px
        &:hover
          color purpleLinkHover
    .copy
      margin-top 70px
      font-size 14px
      font-style italic
      color #777
    .left-two
      font-style italic 
  .right
    float right
    display inline-block
    vertical-align top
    margin-top 40px
    line-height 35px
    .title
      font 1em angelica 
      font-weight 600
      color #111
    img
      margin-left 25px
      margin-top 20px
      vertical-align middle
      &:nth-child(2)
        margin-left 0
    .copy
      font 1em angelica 
      font-weight 600
      color #777
      margin-top 100px
      font-style italic