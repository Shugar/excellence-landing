@import 'nib'
@import 'settings'

global-reset()

body 
  min-width 1200px

purpleLink = #7d396e
purpleLinkHover = #cb596e
blackText = #111
gradientPurple = linear-gradient(left, #74366e, #cb596e)
gradientPurple-2 = linear-gradient(bottom, #74366e, #cb596e)
buttonBorder = 1px #cb596e solid
angelica = 'Anglecia Pro Text', sans-serif
angelicad = 'Anglecia Pro Display', sans-serif
angelicat = 'Anglecia Pro Title', sans-serif
bodoni = 'a_BodoniNova', sans-serif

// Common

$all
  margin-top 60px
  text-align center
  font-size 12px
  letter-spacing 1.5px
  a
    font-family angelica
    border-bottom 1px purpleLink dotted
    color purpleLink
    &:hover
      color purpleLinkHover
      border-bottom 1px purpleLinkHover dotted




a
  text-decoration none 
.href
  a
    color purpleLink
    text-decoration none
    &:hover
      color purpleLinkHover
      
.href-2
  a
    color purpleLink
    text-decoration none
    border-bottom 1px purpleLink dotted
    &:hover
      color purpleLinkHover
      border-bottom 1px purpleLinkHover dotted

.slick-dots 
  li 
    button
      &:before
        font-size 40px
        line-height 12px
        color purpleLink
    &.slick-active 
      button:before
        color purpleLinkHover

.container
  position relative
  margin 0 auto
  width 1160px
  clearfix()


.header
  font-family angelica
  
  .content
    margin-top 12px
    letter-spacing 1.5px
    height 200px
    
    .left, .right, .center
      display inline-block
      
    .left
      margin-top 56px
      float left
      font-size 15px
      font-style italic
      nav
        ul
          li
            margin-top 31px
            &:first-child
              margin-top 0
      
    .center
      absolute left 50% top 15px
      transform translateX(-50%)
      img
        height 160px
        
    .right
      float right
      margin-top 56px
      button
        font-style italic
        font-size 15px
        width 230px
        background #fff
        font-family angelica
        border buttonBorder
        round()
        padding 14px 30px 11px 30px
        color blackText
        &:hover
          background gradientPurple
          color white
          
      p
        font-family angelicad
        font-size 20px
        margin-top 20px
        text-align center
        
  h1 
    text-align center
    font-weight bold
    font-size 15px
    letter-spacing 3px
    margin-top 1px
    color blackText

.gallery
  margin-top 25px
  .container
    .slick
      .item
        position relative
        color #111111
        .background
          background rgba(255,255,255,.5)
          opacity 0
          transition opacity 2s
          transition-delay 2s
          absolute top left
          width 100%
          height 100%
          z-index 500
          &.visible
            opacity 1
          
        &:nth-child(3)
          .text
            width 330px  
            absolute top 130px right 55px
            
        &:nth-child(4)
          .text
            width 410px
            absolute top 210px left 55px  
        img 
          width 100%  
          
        .text
          absolute top 200px right 55px
          z-index 555
          width 450px
          
        .item-text
          font-family angelicat
          font-size 24px
          line-height 53px
          text-align center
          
         
        
        .name, .sub-title
          font-family angelica
          font-size 20px
          text-align center
          margin-top 10px
          font-style italic  
          
        .sub-title
          font-size 16px
          margin-top 15px
  

@keyframes arrow 
  0% 
    transform translateY(0)
    
  50% 
    transform translateY(100px)

  100% 
     
    transform translateY(0)

@keyframes arrow-2
  0% 
    transform translateY(100px)
    
  50% 
    transform translateY(0)

  100% 
    transform translateY(100px)
    
.stellars
  width 100%
  height 100%
  position absolute
  top 0 
  left 0
  .stellar-1, .stellar-2, .stellar-3, .stellar-4, .stellar-5, .stellar-6, .stellar-7
    img
      position absolute
      top 250px
    &:first-child
      img
        top 1050px
        right 50px
        animation arrow 25s linear infinite
    
    &:nth-child(2)
      img
        top 1150px
        left 75px
        animation arrow 25s linear infinite  
        
    &:nth-child(3)
      img
        top 1600px
        right 75px
        animation arrow-2 25s linear infinite
        
    &:nth-child(4)
      img
        top 1950px
        left 450px
        animation arrow 25s linear infinite
        
            
    &:nth-child(5)
      img
        top 2300px
        right 25px
        animation arrow-2  25s linear infinite

    &:nth-child(6)
      img
        top 2200px
        right 75px
        animation arrow-2 25s linear infinite
      
    &:nth-child(7)
      img
        top 2450px
        left 50px
        animation arrow-2 25s linear infinite
   
      
