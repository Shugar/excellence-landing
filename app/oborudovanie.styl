@import 'nib'
@import 'settings'
@import 'layout'




.text-content
  .container
    .title-content
      margin-top 95px
      font 34px angelicat
      line-height 61px
      color blackText
    .content-inner
      margin-top 55px
      .left, .right
        display inline-block
        vertical-align top
      .right
        width 230px 
        position absolute
        right 0
        p, a
          font 18px FuturaBookC
          line-height 31px
        a
          color purpleLink
          &:hover
            color purpleLinkHover
          
      .left
        width 845px
        p
          font 20px angelica 
          line-height 36px
          color blackText
          margin-top 20px
          &:first-child
            margin-top 0
        .big-text
          margin-top 0
          color purpleLink
          font-size 24px
          line-height 43px
          width 733px
          padding 63px 25px 63px 75px
      .logos
        padding 74px 0 30px 0
        a
          img
            display inline-block
            margin-right 104px
            vertical-align middle
            opacity 0.3
            transition opacity 0.2s
            &:hover
              opacity 1
          &:nth-child(1)
            img
              height 96px
          &:nth-child(2)
            img
              height 40px
          &:nth-child(3)
            img
              height 95px
          &:nth-child(4)
            img
              height 70px
              margin-right 0